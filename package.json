{
  "version": "1.7.0",
  "scripts": {
    "lint": "eslint",
    "version": "npm-publish-all bump --bumpType=$npm_package_version && npm run bump_auto_updater && npm run choco_updater && git add .",
    "bump_auto_updater": "VERSION=$npm_package_version ./bin/bump_auto_updater.sh",
    "choco_updater": "VERSION=$npm_package_version ./bin/choco_updater.sh",
    "test:darwin": "mocha test/*.js",
    "test:linux": "mocha test/*.js test/linux/*.js",
    "test:windows": "mocha test/*.js"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-promise": "^3.7.0",
    "mocha": "^5.0.5",
    "npm-publish-all": "0.0.3",
    "spectron": "^3.8.0",
    "timeout-as-promise": "^1.0.0"
  }
}
